    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/supabase-js": "^2.50.2",
    "@types/leaflet": "^1.9.19",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "framer-motion": "^12.19.1",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.523.0",
    "next": "15.3.4",
    "next-auth": "^4.24.11",
    "prisma": "^6.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-leaflet": "^5.0.0",
    "socket.io": "^4.8.1",
